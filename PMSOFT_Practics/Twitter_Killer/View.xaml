<Window x:Class="Twitter_Killer.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View" Height="350" Width="525">
    <Grid Margin="10,0,10,10">
        <Grid.ColumnDefinitions >
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Login}" />
        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Password}" />

        <Button Grid.Column="1" Grid.Row="2" Command="{Binding LoginCommand}" Content="Login"/>
    </Grid>
</Window>
